<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/footer_progress_bar"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="4dp"
        android:drawableTop="@drawable/ic_share_black"
        android:drawablePadding="4dp"
        android:text="@string/title_share"
        android:gravity="center_horizontal"
        android:background="?android:attr/selectableItemBackground"/>

    <View
        android:id="@+id/seperator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_clouds_dark" />

    <LinearLayout
        android:id="@+id/layout_visible_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:clickable="true">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp"
            android:text="header"
            android:textColor="@color/gray_charcoal_dark"
            android:textSize="@dimen/header_title_size"
            fontPath="myfonts/OpenSans-Semibold.ttf"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:id="@+id/txt_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="1,00,000 views"
            android:textColor="@color/tuple_subtitle_color"
            android:textSize="@dimen/header_subtitle_size" />

        <TextView
            android:id="@+id/txt_published_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:drawableRight="@drawable/ic_arrow_drop_down_black"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="Published on Apr 2, 2013"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/tuple_subtitle_color"
            android:textSize="@dimen/header_subtitle_size"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_hidden_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="Published on Apr 2, 2013"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/tuple_subtitle_color"
            android:textSize="@dimen/header_subtitle_size"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

    <View
        android:id="@+id/seperator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_clouds_dark" />
</LinearLayout>