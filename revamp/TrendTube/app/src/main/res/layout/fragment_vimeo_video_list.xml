<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_footer_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:padding="@dimen/footer_padding">

        <org.trendtube.app.ui.TTProgressWheel
            xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/footer_progress_bar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            wheel:matProg_barColor="@color/progress_bar_color"
            wheel:matProg_progressIndeterminate="true" />

        <TextView
            android:id="@+id/txt_remaining_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/footer_text_color"
            android:textSize="@dimen/trending_tuple_subtitle_size"
            android:text="Remaining Video"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_above="@id/layout_footer_progress"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <org.trendtube.app.ui.TTProgressWheel
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        wheel:matProg_barColor="@color/progress_bar_color"
        wheel:matProg_progressIndeterminate="true" />

</RelativeLayout>
