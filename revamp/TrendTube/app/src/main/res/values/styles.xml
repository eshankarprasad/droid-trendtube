<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_normal</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SearchAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_clouds_dark</item>
        <item name="colorPrimaryDark">@color/gray_concrete_light</item>
        <item name="colorAccent">@color/gray_concrete_light</item>
    </style>

    <style name="TrendTubeTabTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:background">@color/red_light</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="TrendTubeFloatingButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/red_normal</item>
    </style>

    <style name="TTProgressDialog" parent="android:Theme.Translucent.NoTitleBar"/>

